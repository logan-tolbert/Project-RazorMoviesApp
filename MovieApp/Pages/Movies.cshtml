@page
@model MovieApp.Pages.MoviesModel
@{
    ViewData["Title"] = "Movies";
    int count = 0;
}

<h1 class="text-center">Movies</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Release Year</th>
            <th scope="col">Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model.Movies)
        {
            <tr>
                <th scope="row">@(++count)</th>
                <td><a asp-page="/Details" asp-route-title="@count/@movie.Title">@movie.Title</a></td>
                <td>@movie.Year</td>
                <td>@movie.Genre</td>
            </tr>
        }

    </tbody>
</table>